<Page x:Class="Library.Views.AddBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBooks">

    <Grid>
        <Label Content="Add Books" HorizontalAlignment="Left" Margin="158,62,0,0" VerticalAlignment="Top" Width="206"/>
        <Label Content="Book Title" HorizontalAlignment="Left" Margin="158,93,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="booksnametext" HorizontalAlignment="Left" Margin="158,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Author ID" HorizontalAlignment="Left" Margin="158,155,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="authoridtext" HorizontalAlignment="Left" Margin="158,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Categories ID " HorizontalAlignment="Left" Margin="158,217,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="categoriesidtext" HorizontalAlignment="Left" Margin="158,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Publish Date" HorizontalAlignment="Left" Margin="158,279,0,0" VerticalAlignment="Top" Width="90"/>
        <DatePicker x:Name="DaTe" HorizontalAlignment="Left" Margin="158,310,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addbooksclick" Content="Add Books" HorizontalAlignment="Left" Margin="172,339,0,0" VerticalAlignment="Top" Click="addbooksclick_Click"/>
    </Grid>
</Page>
